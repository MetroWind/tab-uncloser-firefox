{
    "manifest_version": 2,
    "name": "Tab Uncloser",
    "version": "0.2",

    "description": "Undo tab close with a customizable keyboard shortcut.",

    "icons": {"48": "icon.svg"},

    "commands": {
        "undo-close-session": {
            "suggested_key": { "default": "Ctrl+Z" },
            "description": "Send a 'undo-close-session' event to the extension"
        }
    },

    "permissions": ["sessions", "menus", "storage"],

    "background": {
        "scripts": ["background.js"]
    },

    "options_ui": {
        "page": "options.html",
        "browser_style": true
    },

    "applications": {
        "gecko": {
            "id": "{eccb4ec8-d1f4-452b-8d9e-447b9e33c1fd}"
        }
    }
}
